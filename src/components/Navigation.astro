---
/**
 * Navigation component - Inspired by aboardhr.com design
 * 
 * Features:
 * - Desktop: Logo left, centered nav links, CTA button right
 * - Mobile: Hamburger menu with full-screen overlay
 * - Three navigation links: Features, How It Works, Comparison
 * - Rose pink accent on CTA button (rgb(251, 113, 133))
 * - Smooth animations and transitions
 * - Sticky positioning with backdrop blur
 */
---

<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-lg border-b border-neutral-200" role="navigation" aria-label="Main navigation">
  <div class="max-w-7xl mx-auto px-5 sm:px-10 lg:px-20">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <button
        onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
        class="flex items-center gap-2 hover:opacity-80 transition-opacity focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 rounded-lg cursor-pointer"
        aria-label="StudioLoop - Scroll to top of page"
      >
        <img 
          src="/studio-loop-logo.png" 
          alt="StudioLoop Logo" 
          class="h-14 sm:h-16 md:h-20 w-auto"
        />
      </button>

      <!-- Desktop Navigation Links (centered) -->
      <div class="hidden lg:flex items-center justify-center flex-1 mx-12">
        <div class="flex items-center gap-8">
          <button
            onclick="document.getElementById('features').scrollIntoView({behavior: 'smooth'})"
            class="text-base font-body text-neutral-700 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-pink-400 rounded focus:text-neutral-900 transition-colors cursor-pointer"
            aria-label="Navigate to Features section"
          >
            Features
          </button>
          <button
            onclick="document.getElementById('how-it-works').scrollIntoView({behavior: 'smooth'})"
            class="text-base font-body text-neutral-700 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-pink-400 rounded focus:text-neutral-900 transition-colors cursor-pointer"
            aria-label="Navigate to How It Works section"
          >
            How It Works
          </button>
          <button
            onclick="document.getElementById('comparison').scrollIntoView({behavior: 'smooth'})"
            class="text-base font-body text-neutral-700 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-pink-400 rounded focus:text-neutral-900 transition-colors cursor-pointer"
            aria-label="Navigate to Comparison section"
          >
            Comparison
          </button>
        </div>
      </div>

      <!-- Desktop CTA Button -->
      <button
        onclick="document.getElementById('waitlist').scrollIntoView({behavior: 'smooth'})"
        class="hidden lg:inline-flex items-center px-6 py-3 text-white text-base font-body font-semibold rounded-full transition-all hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 cursor-pointer"
        style="background-color: rgb(251, 113, 133);"
        onmouseover="this.style.backgroundColor='rgb(244, 63, 94)'"
        onmouseout="this.style.backgroundColor='rgb(251, 113, 133)'"
        aria-label="Navigate to waitlist signup form"
      >
        Join Waitlist
      </button>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 focus:outline-none rounded-lg relative z-[60] cursor-pointer"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <!-- Hamburger Icon -->
        <svg 
          id="hamburger-icon" 
          class="w-6 h-6 transition-all duration-300 text-neutral-900"
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</nav>

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-white z-[55] opacity-0 invisible transition-all duration-300 lg:hidden"
>
  <div class="flex flex-col h-full">
    <!-- Header with Logo and Close Button -->
    <div class="flex justify-between items-center px-5 sm:px-10 h-20 border-b border-neutral-100">
      <!-- Logo -->
      <button
        onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
        class="flex items-center gap-2 hover:opacity-80 transition-opacity focus:outline-none cursor-pointer"
        aria-label="Scroll to top"
      >
        <img 
          src="/studio-loop-logo.png" 
          alt="StudioLoop Logo" 
          class="h-14 sm:h-16 w-auto"
        />
      </button>
      
      <!-- Close Button -->
      <button
        id="mobile-menu-close"
        class="p-2 focus:outline-none rounded-lg cursor-pointer"
        aria-label="Close menu"
      >
        <svg 
          class="w-6 h-6 text-neutral-900" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <!-- Navigation Links (left-aligned, top of content area) -->
    <div class="flex flex-col px-5 sm:px-10 pt-8 space-y-2">
      <button
        class="mobile-menu-link py-4 text-2xl font-body font-normal text-neutral-700 hover:text-neutral-900 text-left transition-colors focus:outline-none focus:ring-2 focus:ring-pink-400 rounded cursor-pointer"
        data-section="features"
        aria-label="Navigate to Features section"
      >
        Features
      </button>
      <button
        class="mobile-menu-link py-4 text-2xl font-body font-normal text-neutral-700 hover:text-neutral-900 text-left transition-colors focus:outline-none focus:ring-2 focus:ring-pink-400 rounded cursor-pointer"
        data-section="how-it-works"
        aria-label="Navigate to How It Works section"
      >
        How It Works
      </button>
      <button
        class="mobile-menu-link py-4 text-2xl font-body font-normal text-neutral-700 hover:text-neutral-900 text-left transition-colors focus:outline-none focus:ring-2 focus:ring-pink-400 rounded cursor-pointer"
        data-section="comparison"
        aria-label="Navigate to Comparison section"
      >
        Comparison
      </button>
    </div>

    <!-- Spacer to push button to bottom -->
    <div class="flex-1"></div>

    <!-- Mobile Join Waitlist Button (at bottom) -->
    <div class="px-5 sm:px-10 pb-8">
      <button
        class="mobile-menu-link w-full py-4 text-white text-lg font-body font-semibold rounded-full transition-all focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 shadow-lg cursor-pointer"
        style="background-color: rgb(251, 113, 133);"
        onmouseover="this.style.backgroundColor='rgb(244, 63, 94)'"
        onmouseout="this.style.backgroundColor='rgb(251, 113, 133)'"
        data-section="waitlist"
        aria-label="Navigate to waitlist signup form"
      >
        Join Waitlist
      </button>
    </div>
  </div>
</div>

<script>
  /**
   * Mobile menu toggle functionality
   * Handles opening/closing the mobile menu with smooth animations
   */
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenuCloseButton = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

  let isMenuOpen = false;

  /**
   * Toggles the mobile menu open/closed state with smooth animations
   */
  const toggleMenu = (): void => {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      // Open menu
      mobileMenu?.classList.remove('invisible', 'opacity-0');
      mobileMenu?.classList.add('opacity-100');
      mobileMenuButton?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden'; // Prevent scrolling when menu is open
    } else {
      // Close menu
      mobileMenu?.classList.add('opacity-0');
      mobileMenu?.classList.remove('opacity-100');
      setTimeout(() => {
        mobileMenu?.classList.add('invisible');
      }, 300); // Wait for fade-out animation
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = ''; // Restore scrolling
    }
  };

  /**
   * Scrolls to a section and closes the mobile menu
   * @param {string} sectionId - The ID of the section to scroll to
   */
  const scrollToSection = (sectionId: string): void => {
    const section = document.getElementById(sectionId);
    if (section) {
      section.scrollIntoView({ behavior: 'smooth' });
      // Close menu after clicking
      if (isMenuOpen) {
        toggleMenu();
      }
    }
  };

  // Add click event listener to hamburger menu button
  mobileMenuButton?.addEventListener('click', toggleMenu);

  // Add click event listener to close button in mobile menu
  mobileMenuCloseButton?.addEventListener('click', toggleMenu);

  // Add click event listeners to all mobile menu links
  mobileMenuLinks.forEach((link) => {
    link.addEventListener('click', (e: Event) => {
      const target = e.currentTarget as HTMLElement;
      const sectionId = target.getAttribute('data-section');
      if (sectionId) {
        scrollToSection(sectionId);
      }
    });
  });

  // Close menu when clicking outside (on the overlay)
  mobileMenu?.addEventListener('click', (e: Event) => {
    if (e.target === mobileMenu && isMenuOpen) {
      toggleMenu();
    }
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Escape' && isMenuOpen) {
      toggleMenu();
    }
  });
</script>