---
/**
 * Footer component - Simple footer with copyright and links
 * 
 * Features:
 * - Basic footer with copyright information
 * - Links to social media or additional pages
 * - Clean, minimal design
 */
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand Column -->
      <div>
        <span class="text-2xl font-semibold text-white">StudioLoop</span>
        <p class="mt-4 text-sm text-gray-400">
          Affordable post-class follow-ups for boutique fitness studios.
        </p>
      </div>

      <!-- Product Column -->
      <div>
        <h3 class="text-white font-semibold mb-4">Product</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <button
              onclick="document.getElementById('features')?.scrollIntoView({behavior: 'smooth'})"
              class="hover:text-white transition-colors"
            >
              Features
            </button>
          </li>
          <li>
            <button
              onclick="document.getElementById('pricing')?.scrollIntoView({behavior: 'smooth'})"
              class="hover:text-white transition-colors"
            >
              Pricing
            </button>
          </li>
          <li>
            <button
              onclick="document.getElementById('comparison')?.scrollIntoView({behavior: 'smooth'})"
              class="hover:text-white transition-colors"
            >
              Compare to FitGrid
            </button>
          </li>
        </ul>
      </div>

      <!-- Company Column -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <button
              onclick="document.getElementById('waitlist')?.scrollIntoView({behavior: 'smooth'})"
              class="hover:text-white transition-colors"
            >
              Join Waitlist
            </button>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-12 pt-8 text-sm text-gray-400 text-center">
      <p>&copy; {new Date().getFullYear()} StudioLoop. All rights reserved.</p>
    </div>
  </div>
</footer>