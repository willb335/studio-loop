---
/**
 * Pricing component - Simple, transparent pricing card
 * 
 * Displays StudioLoop's affordable pricing with clear value proposition.
 * Single pricing tier with emphasis on no annual contract and key features.
 * Includes CTA button to join waitlist.
 */
---

<section id="pricing" class="bg-gradient-to-br from-indigo-50 via-white to-pink-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Simple, Transparent Pricing
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        No hidden fees. No annual contracts. Just affordable member engagement.
      </p>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="bg-white rounded-2xl shadow-xl border-2 border-indigo-200 overflow-hidden">
        <!-- Pricing Header -->
        <div class="bg-gradient-to-br from-indigo-600 to-indigo-700 text-white px-8 py-10 text-center">
          <h3 class="text-2xl font-bold mb-2">StudioLoop</h3>
          <p class="text-indigo-100 mb-6">Everything you need to connect with members</p>
          <div class="flex items-baseline justify-center">
            <span class="text-5xl font-bold">$29</span>
            <span class="text-xl ml-2 text-indigo-100">/month</span>
          </div>
          <p class="text-sm text-indigo-100 mt-4">No annual contract • Cancel anytime</p>
        </div>

        <!-- Features List -->
        <div class="px-8 py-10">
          <ul class="space-y-4 mb-8">
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">Unlimited automated post-class emails</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">MindBody integration included</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">Member engagement analytics</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">5-minute setup process</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">Email support included</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 text-xl mr-3 mt-0.5">✓</span>
              <span class="text-gray-700">All future updates free</span>
            </li>
          </ul>

          <button
            onclick="document.getElementById('waitlist').scrollIntoView({behavior: 'smooth'})"
            class="w-full bg-indigo-600 text-white px-6 py-4 rounded-lg font-medium hover:bg-indigo-700 transition-colors shadow-lg hover:shadow-xl"
          >
            Join the Waitlist
          </button>

          <p class="text-center text-sm text-gray-500 mt-6">
            Launch special: First 100 studios get lifetime pricing at $29/month
          </p>
        </div>
      </div>
    </div>

    <!-- Price Comparison -->
    <div class="mt-12 text-center">
      <p class="text-gray-600">
        <span class="font-bold text-indigo-600">10x cheaper than FitGrid</span> with the features boutique studios actually need
      </p>
    </div>
  </div>
</section>