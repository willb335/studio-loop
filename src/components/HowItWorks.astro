---
/**
 * HowItWorks component - 5-step process visualization
 * 
 * Explains the simple onboarding and usage process for StudioLoop.
 * Uses a numbered list with icons to guide users through the journey
 * from signup to automated member engagement.
 */

/**
 * Step data for the how-it-works process
 * Each step has a number, icon, title, and description
 */
const steps = [
  {
    number: 1,
    icon: 'ğŸ“',
    title: 'Join the Waitlist',
    description: 'Sign up with your email and studio details. We\'ll notify you when we launch.'
  },
  {
    number: 2,
    icon: 'ğŸ”—',
    title: 'Connect MindBody',
    description: 'Link your MindBody account with one click. We securely sync your class schedule and member roster.'
  },
  {
    number: 3,
    icon: 'âœï¸',
    title: 'Customize Your Messages',
    description: 'Personalize your post-class follow-up templates. Add your studio\'s voice and branding.'
  },
  {
    number: 4,
    icon: 'ğŸš€',
    title: 'Launch Automations',
    description: 'Turn on automated follow-ups. Members receive emails after every class, automatically.'
  },
  {
    number: 5,
    icon: 'ğŸ“ˆ',
    title: 'Track Engagement',
    description: 'Monitor open rates and responses. See which members are most engaged with your studio.'
  }
];
---

<section class="bg-gray-50 py-16 sm:py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-5 sm:px-10 lg:px-20">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        How StudioLoop Works
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Get started in minutes and automate your member engagement forever.
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-8">
        {steps.map((step, index) => (
          <div class="relative">
            {/* Connector Line (except for last step) */}
            {index < steps.length - 1 && (
              <div class="absolute left-8 top-20 bottom-0 w-0.5 bg-indigo-200 -mb-8" aria-hidden="true"></div>
            )}

            {/* Step Card */}
            <div class="relative bg-white rounded-xl shadow-sm border border-gray-100 p-8 hover:shadow-md transition-shadow">
              <div class="flex items-start gap-6">
                {/* Step Number Badge */}
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 bg-indigo-600 text-white rounded-full flex items-center justify-center text-2xl font-bold shadow-lg">
                    {step.number}
                  </div>
                </div>

                {/* Step Content */}
                <div class="flex-1 pt-2">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="text-3xl" aria-hidden="true">{step.icon}</span>
                    <h3 class="text-2xl font-semibold text-gray-900">
                      {step.title}
                    </h3>
                  </div>
                  <p class="text-lg text-gray-600 leading-relaxed">
                    {step.description}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Call to Action */}
    <div class="mt-16 text-center">
      <button
        onclick="document.getElementById('waitlist').scrollIntoView({behavior: 'smooth'})"
        class="bg-indigo-600 text-white px-8 py-4 rounded-lg text-lg font-medium hover:bg-indigo-700 transition-colors shadow-lg hover:shadow-xl"
      >
        Get Started Today
      </button>
      <p class="text-sm text-gray-500 mt-4">
        Setup takes less than 5 minutes â€¢ No technical skills required
      </p>
    </div>
  </div>
</section>