---
/**
 * Hero Section - Mobile-First Design
 * 
 * Clean, focused design with:
 * - Clear headline and subheadline
 * - Minimal trust indicators
 * - Single prominent CTA
 * - Hero image with subtle shadow
 */

import { Image } from 'astro:assets';
import heroImage from '../assets/app/hero.png';
---

<section class="relative w-full bg-white overflow-hidden" aria-labelledby="hero-heading">
  <div class="absolute inset-0 bg-gradient-radial-pink opacity-30" aria-hidden="true"></div>
  
  <div class="relative z-10 max-w-6xl mx-auto px-5 sm:px-8">
    <div class="pt-16 sm:pt-20 lg:pt-24 pb-12 sm:pb-16 lg:pb-20">
      
      <!-- Content -->
      <div class="text-center max-w-3xl mx-auto mb-10 sm:mb-14">
        <h1 id="hero-heading" class="font-heading font-bold text-3xl sm:text-5xl lg:text-6xl leading-tight mb-5 sm:mb-6" style="color: var(--neutral-900);">
          Stop Losing New Members After Their First Class
        </h1>
        
        <p class="font-body text-lg sm:text-xl leading-relaxed mb-8 sm:mb-10" style="color: var(--neutral-600);">
          Automatic personal follow-ups after every class. 90% cheaper than <a href="https://fitgrid.com" target="_blank" rel="noopener noreferrer" class="fitgrid-link" style="color: var(--neutral-900); font-weight: 600; text-decoration: underline; text-underline-offset: 2px;">FitGrid</a>.
        </p>
        
        <!-- Trust Bar -->
        <div class="flex flex-wrap justify-center gap-4 sm:gap-6 mb-8 sm:mb-10 text-sm sm:text-base" style="color: var(--neutral-700);">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: rgb(251, 113, 133);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>5-min setup</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: rgb(251, 113, 133);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>No credit card</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: rgb(251, 113, 133);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>MindBody certified</span>
          </div>
        </div>
        
        <!-- CTA Button -->
        <button
          onclick="document.getElementById('waitlist').scrollIntoView({behavior: 'smooth'})"
          class="cta-button"
          aria-label="Join waitlist and get early access"
        >
          <span class="cta-mobile">Join Waitlist</span>
          <span class="cta-desktop">Get Early Access â€” Save $238/Month</span>
        </button>
      </div>
      
      <!-- App Screenshot -->
      <div class="max-w-5xl mx-auto">
        <Image
          src={heroImage}
          alt="StudioLoop instructor dashboard showing class management and member engagement"
          class="w-full h-auto rounded-xl sm:rounded-2xl shadow-hero"
          loading="eager"
          widths={[640, 768, 1024, 1280, 1536]}
          sizes="(max-width: 640px) 100vw, (max-width: 1024px) 90vw, 1200px"
        />
      </div>
      
    </div>
  </div>
</section>


<style>
  .fitgrid-link {
    transition: color 0.2s ease;
  }
  
  .fitgrid-link:hover {
    color: rgb(251, 113, 133) !important;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    color: white;
    background-color: rgb(251, 113, 133);
    border-radius: 9999px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 14px rgba(251, 113, 133, 0.25);
  }
  
  .cta-button:hover {
    background-color: rgb(244, 63, 94);
    box-shadow: 0 6px 20px rgba(251, 113, 133, 0.35);
    transform: translateY(-1px);
  }
  
  .cta-button:focus {
    outline: 2px solid rgb(251, 113, 133);
    outline-offset: 2px;
  }
  
  .cta-desktop {
    display: none;
  }
  
  .cta-mobile {
    display: inline;
  }
  
  .shadow-hero {
    box-shadow: 0 20px 50px rgba(251, 113, 133, 0.15);
  }
  
  /* Tablet and up */
  @media (min-width: 640px) {
    .cta-button {
      padding: 16px 40px;
      font-size: 1.125rem;
    }
    
    .cta-desktop {
      display: inline;
    }
    
    .cta-mobile {
      display: none;
    }
  }
  
  /* Mobile optimization */
  @media (max-width: 639px) {
    h1 {
      letter-spacing: -0.02em;
    }
  }
</style>
