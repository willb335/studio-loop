---
/**
 * Hero Section - Redesigned to match aboardhr.com aesthetic
 * 
 * Design Philosophy:
 * - Large, benefit-focused headline that speaks to member value
 * - Prominent app screenshot as the hero visual (show, don't just tell)
 * - Clean, centered layout with generous white space
 * - Rose pink accent color for CTAs
 * - Responsive typography and spacing
 * 
 * Layout Structure:
 * - Headline and subheadline centered at top
 * - Two CTAs (primary pink, secondary outline)
 * - Large app screenshot below with pink shadow treatment
 * - Clean white background with optional subtle pink gradient
 */

// Import the placeholder instructor dashboard image
const instructorDashboard = '/src/assets/app/instructor-dashboard.png.svg';
---

<section class="relative w-full bg-white overflow-hidden" aria-labelledby="hero-heading">
  <!-- Optional: Subtle radial gradient background -->
  <div class="absolute inset-0 bg-gradient-radial-pink opacity-40" aria-hidden="true"></div>
  
  <!-- Main Content Container -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <!-- Top Padding: 120px desktop, 80px mobile -->
    <div class="pt-20 sm:pt-24 lg:pt-[120px]">
      
      <!-- Headline Section -->
      <div class="text-center max-w-4xl mx-auto">
        <!-- Main Headline -->
        <h1 id="hero-heading" class="font-heading font-bold text-[2.25rem] sm:text-5xl lg:text-[3.5rem] leading-[1.1] mb-6 sm:mb-8" style="color: var(--neutral-900); max-width: 900px; margin-left: auto; margin-right: auto;">
          Your Members Deserve Better Follow-Ups
        </h1>
        
        <!-- Subheadline -->
        <p class="font-body text-lg sm:text-xl lg:text-[1.25rem] leading-relaxed mb-10 sm:mb-12" style="color: var(--neutral-600); max-width: 700px; margin-left: auto; margin-right: auto; line-height: 1.6;">
          Automate personalized post-class emails that strengthen member relationships. Built exclusively for boutique fitness studios. Just $29/month.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <!-- Primary CTA: Join Waitlist (Pill-shaped) -->
          <button
            onclick="document.getElementById('waitlist').scrollIntoView({behavior: 'smooth'})"
            class="inline-flex items-center justify-center px-8 py-4 font-body font-semibold text-lg text-white rounded-full transition-all duration-200 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 cursor-pointer"
            style="background-color: rgb(251, 113, 133); padding: 16px 32px;"
            onmouseover="this.style.backgroundColor='rgb(244, 63, 94)'"
            onmouseout="this.style.backgroundColor='rgb(251, 113, 133)'"
            aria-label="Join the waitlist - Navigate to signup form"
          >
            Join the Waitlist
          </button>
          
          <!-- Secondary CTA: See How It Works (Pill-shaped) -->
          <button
            onclick="document.getElementById('how-it-works').scrollIntoView({behavior: 'smooth'})"
            class="inline-flex items-center justify-center px-8 py-4 font-body font-semibold text-lg rounded-full transition-all duration-200 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2 cursor-pointer"
            style="background-color: transparent; border: 2px solid var(--neutral-200); color: var(--neutral-700); padding: 16px 32px;"
            onmouseover="this.style.borderColor='var(--neutral-300)'"
            onmouseout="this.style.borderColor='var(--neutral-200)'"
            aria-label="See how it works - Navigate to process section"
          >
            See How It Works
          </button>
        </div>
      </div>
      
      <!-- App Screenshot -->
      <div class="mt-12 sm:mt-16 lg:mt-[60px]">
        <div class="app-screenshot-hero" role="img" aria-label="StudioLoop instructor dashboard interface">
          <img
            src={instructorDashboard}
            alt="StudioLoop instructor dashboard showing class management, member feedback ratings, and engagement tracking features"
            class="w-full h-auto rounded-2xl"
            style="border-radius: 1rem; box-shadow: 0 25px 70px rgba(251, 113, 133, 0.2); max-width: 1100px; margin: 0 auto; display: block;"
            loading="eager"
          />
        </div>
      </div>
      
    </div>
    
    <!-- Bottom Padding: 100px desktop, 60px mobile -->
    <div class="pb-16 sm:pb-20 lg:pb-[100px]"></div>
  </div>
</section>

<style>
  /* Additional hover states and transitions */
  button {
    transition: all 0.2s ease-in-out;
  }
  
  /* Ensure proper font rendering */
  h1 {
    font-family: var(--font-heading);
    letter-spacing: -0.02em;
  }
  
  p {
    font-family: var(--font-body);
  }
  
  /* Mobile-specific adjustments */
  @media (max-width: 640px) {
    h1 {
      font-size: 2.25rem; /* 36px */
      line-height: 1.1;
    }
    
    p {
      font-size: 1.125rem; /* 18px */
    }
  }
  
  /* Responsive image treatment */
  .app-screenshot-hero img {
    width: 100%;
    height: auto;
  }
  
  @media (max-width: 768px) {
    .app-screenshot-hero {
      padding: 0 20px;
    }
  }
</style>